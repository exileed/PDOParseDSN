{
    "name": "exileed/pdoparsedsn",
    "type": "library",
    "description": "A class for parsing PHP's PDO strings.",
    "keywords": [
        "exileed",
        "pdoparsedsn",
        "pdo"
    ],
    "homepage": "https://github.com/exileed/PDOParseDSN",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitriy Kuts (ExileeD)",
            "email": "me@exileed.com",
            "homepage": "https://exileed.com"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "ExileeD\\PDOParseDSN\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExileeD\\PDOParseDSN\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs",
        "fix-style": "phpcbf"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
